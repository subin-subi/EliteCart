 <!-- Edit Product Modal -->
 <div id="editProductModal" class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 items-center justify-center overflow-auto">
    <div class="bg-white rounded-lg shadow-lg p-6 w-[600px] max-h-[90vh] overflow-y-auto">
      <h2 class="text-xl font-bold mb-4">Edit Product</h2>
        <form id="editProductForm"  method="POST" enctype="multipart/form-data">
        <!-- Hidden field for Product ID -->
        <input type="hidden" id="editProductId"   name="productId">
  
        <!-- Name -->
        <label class="block font-medium">Name</label>
        <input type="text" id="editProductName" name="name"
               class="w-full border p-2 rounded mb-3">
  <!-- Category -->
<label class="block font-medium">Category</label>
<select id="editProductCategory" name="category"
        class="w-full border p-2 rounded mb-3">
  <% categories.forEach(cat => { %>
    <option value="<%= cat._id %>"><%= cat.name %></option>
  <% }) %>
</select>

<!-- Brand -->
<label class="block font-medium">Brand</label>
<select id="editProductBrand" name="brand"
        class="w-full border p-2 rounded mb-3">
  <% brands.forEach(brand => { %>
    <option value="<%= brand._id %>"><%= brand.name %></option>
  <% }) %>
</select>

  
        <!-- Color -->
        <label class="block font-medium">Color</label>
        <input type="text" id="editProductColor" name="color"
               class="w-full border p-2 rounded mb-3">
  
        <!-- Price -->
        <label class="block font-medium">Price</label>
        <input type="number" id="editProductPrice" name="price"
               class="w-full border p-2 rounded mb-3">
  
        <!-- Stock -->
        <label class="block font-medium">Stock</label>
        <input type="number" id="editProductStock" name="stock"
               class="w-full border p-2 rounded mb-3">
  
        <!-- Description -->
        <label class="block font-medium">Description</label>
        <textarea id="editProductDescription" name="description"
                  class="w-full border p-2 rounded mb-3"></textarea>
  
        <!-- Main Image -->
        <label class="block font-medium">Main Image</label>
        <input type="file" id="editMainImage" name="mainImage"
               accept="image/*" class="mb-3">
        <img id="editMainImagePreview" class="h-24 mb-3 rounded">
  
        <!-- Sub Images -->
        <label class="block font-medium">Sub Images</label>
