<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Product</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" />
   <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js"></script>
   <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>


  
</head>
<body class="bg-gray-100 min-h-screen">

  <!-- Main Container -->
  <div class="max-w-5xl mx-auto bg-white p-8 mt-10 rounded-lg shadow-lg">
    <h1 class="text-2xl font-bold text-gray-700 mb-6">Add New Product</h1>

    <form id="addProductForm" class="space-y-6" enctype="multipart/form-data" method="POST" action="/admin/addP roduct">


      <!-- Product Details -->
      <div class="space-y-4">
        <h2 class="text-xl font-semibold text-gray-800">Product Details</h2>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-gray-600 mb-1">Product Name*</label>
            <input type="text" id="productName" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" placeholder="Enter product name">
           <span id="errorName" class="text-red-500 text-sm"></span>
          </div>

          <div>
            <label class="block text-gray-600 mb-1">Brand*</label>
            <select id="productBrand" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500">
              <option value="">Select brand</option>
              <% if (brands && brands.length > 0) { %>
                <% brands.forEach(brand => { %>
                  <option value="<%= brand._id %>"><%= brand.name %></option>
                <% }) %>
              <% } %>
            </select>
            <span id="errorBrand" class="text-red-500 text-sm"></span>
          </div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-gray-600 mb-1">Category*</label>
            <select id="productCategory" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500">
              <option value="">Select category</option>
              <% if (categories && categories.length > 0) { %>
                <% categories.forEach(category => { %>
                  <option value="<%= category._id %>"><%= category.name %></option>
                <% }) %>
              <% } %>
            </select>
             <span id="errorCategory" class="text-red-500 text-sm"></span>
          </div>
        </div>

        <div>
          <label class="block text-gray-600 mb-1">Product Description*</label>
          <textarea id="productDescription" rows="3" class="w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" placeholder="Enter product description"></textarea>
         <span id="errorDescription" class="text-red-500 text-sm"></span>
        </div>
      </div>

      <!-- Variants Section -->
      <div class="space-y-4">
        <div class="flex justify-between items-center">
          <h2 class="text-xl font-semibold text-gray-800">Variants*</h2>
          <button type="button" onclick="addVariant()" class="px-3 py-1 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition text-sm">
            + Add Variant
          </button>
        </div>

        <div id="variantsContainer">
          <div class="variant-item border border-gray-200 rounded-lg p-4 mb-4">
            <div class="flex justify-between items-center mb-3">
              <h4 class="text-md font-medium text-gray-700">Variant 1</h4>
              <button type="button" onclick="removeVariant(this)" class="text-red-500 hover:text-red-700">
                <span class="material-icons text-sm">delete</span>
              </button>
            </div>
            <div class="grid grid-cols-3 gap-4">
              <div>
  <label class="block text-gray-600 mb-1">Volume*</label>
  <select class="variant-volume w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500">
    <option value="">Select volume</option>
    <option value="100">100 ml</option>
    <option value="250">250 ml</option>
    <option value="500">500 ml</option>
    <option value="750">750 ml</option>
    <option value="1000">1000 ml</option>
  </select>
    <span class="errorVariantVolume text-red-500 text-sm"></span>
</div>
              <div>
                <label class="block text-gray-600 mb-1">Price*</label>
                <input type="number" class="variant-price w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" placeholder="Enter price" step="1">
               <span class="errorVariantPrice text-red-500 text-sm"></span>
              </div>
              <div>
                <label class="block text-gray-600 mb-1">Quantity*</label>
                <input type="number" class="variant-stock w-full px-3 py-2 border rounded-lg focus:ring-2 focus:ring-blue-500" placeholder="Enter quantity" min="0">
                       <span class="errorVariantStock text-red-500 text-sm"></span>

              </div>
            </div>
          </div>
        </div>
      </div>

      
    <!-- Product Images -->
  <div class="mt-6">
    <h3 class="text-lg font-semibold text-gray-800 mb-4">Product Images</h3>
  
    <!-- Main Image -->
    <div class="mb-4">
      <label class="block text-gray-600 mb-2">Main Image*</label>
      <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 text-center cursor-pointer"
           onclick="document.getElementById('mainImageInput').click()">
        <div class="flex flex-col items-center">
          <span class="material-icons text-gray-400 text-2xl mb-2">upload</span>
          <p class="text-gray-600 text-sm">Click to upload main image</p>
        </div>
        <input type="file" id="mainImageInput" name="mainImage" class="hidden"
               accept="image/*" onchange="handleMainImageChange(event)">
               <span id="errorMainImage" class="text-red-500 text-sm"></span>
     <div id="mainImagePreview" class="mt-2"></div>
      </div>
      
      <div id="mainImagePreview" class="mt-2"></div>
    </div>
  
    <!-- Sub Images -->
    <div class="mb-4">
      <label class="block text-gray-600 mb-2">Additional Images (Exactly 3 Required)*</label>
      <div class="border-2 border-dashed border-gray-300 rounded-lg p-4 text-center cursor-pointer"
           onclick="document.getElementById('subImagesInput').click()">
        <div class="flex flex-col items-center">
          <span class="material-icons text-gray-400 text-2xl mb-2">upload</span>
          <p class="text-gray-600 text-sm">Click to upload additional images</p>
        </div>
        <input type="file" id="subImagesInput" name="subImages" class="hidden"
               multiple accept="image/*" onchange="handleSubImagesUpload(this)">
                <span id="errorSubImages" class="text-red-500 text-sm"></span>
              <div id="subImagesPreview" class="flex flex-wrap gap-2 mt-3"></div>
      </div>
      <div class="flex justify-between items-center mt-2">
        <span class="text-xs text-gray-500">Current: <span id="currentImageCount">0</span>/3</span>
        <button type="button" onclick="clearAllSubImages()" class="text-xs text-red-500">Clear All</button>
      </div>
      <div id="subImagesPreview" class="flex flex-wrap gap-2 mt-3"></div>
    </div>
  </div>
  
  

      <!-- Action Buttons -->
      <div class="flex justify-end space-x-3">
        <a href="/admin/products" 
   class="px-6 py-2 bg-gray-300 text-gray-700 rounded-lg 
          hover:bg-gray-400 transition inline-block text-center">
   Cancel
</a>

     <button type="submit" class="px-6 py-2 bg-black text-white rounded-lg hover:bg-gray-800 transition">Add Product</button>
      </div>

    </form>
  </div>
  <!-- ///////====================================================================================//////// -->
  <!-- Crop Modal -->
  <div id="cropModal" class="hidden fixed inset-0 bg-black bg-opacity-80 flex items-center justify-center z-50">
    <div class="bg-gray-900 p-6 rounded-2xl max-w-xl w-full border border-gray-800">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-bold text-white">Crop Image</h2>
        <button onclick="closeCropModal()" class="text-gray-400 hover:text-white text-2xl font-bold">&times;</button>
      </div>
      <div class="w-full h-96">
        <img id="cropImage" class="max-h-full w-full object-contain" />
      </div>
      <div class="text-center mt-4">
        <button onclick="cropAndSave()" class="bg-gradient-to-r from-blue-500 to-purple-500 text-white px-6 py-2 rounded-xl hover:from-blue-600 hover:to-purple-600">Crop & Save</button>
      </div>
    </div>
  </div>

  <!-- Scripts -->
 
<script src="/javascript/admin/addProduct.js" >   </script>
</body>
</html>