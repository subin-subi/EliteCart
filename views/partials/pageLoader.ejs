<!-- Page Loader -->
<div id="pageLoader" 
     class="fixed inset-0 hidden z-[9999] 
            flex items-center justify-center">

  <div class="flex items-center gap-2">
    <span class="w-3 h-3 rounded-full bg-black animate-pulse-fast"></span>
    <span class="w-3 h-3 rounded-full bg-black animate-pulse-500"></span>
    <span class="w-3 h-3 rounded-full bg-black animate-pulse-fast"></span>
  </div>

</div>

<style>
  .animate-pulse-fast { animation: pulse 0.9s cubic-bezier(.4,0,.6,1) infinite; }
  .animate-pulse-500 { animation: pulse 1.2s cubic-bezier(.4,0,.6,1) infinite; }

  @keyframes pulse {
    0% { transform: scale(1); opacity: 1; }
    50% { transform: scale(1.6); opacity: 0.3; }
    100% { transform: scale(1); opacity: 1; }
  }
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const loader = document.getElementById("pageLoader");

  if (!loader) return;

  const show = () => loader.classList.remove("hidden");
  const hide = () => loader.classList.add("hidden");

  // ALWAYS HIDE at DOM ready
  hide();

  // Hide on full load
  window.addEventListener("load", hide);

  // Hide on back button restore
  window.addEventListener("pageshow", hide);

  // Show loader on navigation clicks
  document.querySelectorAll("a").forEach(link => {
    link.addEventListener("click", function () {
      const href = this.getAttribute("href");

      if (!href) return;
      if (href.startsWith("#")) return;
      if (href.startsWith("javascript")) return;
      if (this.target === "_blank") return;
      if (href === window.location.pathname) return;

      show();
    });
  });

  // Show on form submit
  document.querySelectorAll("form").forEach(form => {
    form.addEventListener("submit", show);
  });
});
</script>




