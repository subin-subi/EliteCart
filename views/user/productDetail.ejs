<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Details</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <!-- Add this in your layout or EJS head -->
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
/>



</head>
<body class="bg-gray-100 pt-16 sm:pt-20">

   <%- include("../partials/pageLoader") %>
<!-- Navbar -->
  <%- include("../partials/nav") %>

<section class="max-w-6xl mx-auto px-4 md:px-8 py-12">

  <!-- Breadcrumb -->
  <nav class="flex text-sm text-gray-500 mb-6" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-2">
      <li class="inline-flex items-center">
        <a href="/" class="inline-flex items-center text-gray-500 hover:text-gray-700">
          <i class="fa fa-home mr-1"></i> Home
        </a>
      </li>
      <li><i class="fa fa-angle-right mx-2 text-gray-400"></i></li>
      <li class="inline-flex items-center">
        <a href="/product" class="inline-flex items-center text-gray-500 hover:text-gray-700">
          <i class="fa fa-shopping-bag mr-1"></i> Shop
        </a>
      </li>
      <li><i class="fa fa-angle-right mx-2 text-gray-400"></i></li>
      <li class="inline-flex items-center text-gray-800 font-medium">
        <i class="fa fa-cube mr-1"></i> Product
      </li>
    </ol>
  </nav>

  <!-- Product Section -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-start">

   <!-- Left Side --> 
    <div class="flex flex-col md:w-[90%] lg:w-[85%] mx-auto"> <!-- Main Image --> <div class="bg-white rounded-lg shadow overflow-hidden relative"> <img id="mainImage" src="<%= product.variants[0].mainImage || '/images/placeholder.png' %>"
       alt="<%= product.name %>" class="w-full h-[350px] sm:h-[450px] md:h-[550px] object-cover rounded-xl transition-transform duration-300 ease-in-out">
     </div> <!-- Thumbnails --> <div id="thumbnails" class="mt-6 grid grid-cols-3 gap-4"> <% (product.variants[0].subImages || []).forEach(function(img, idx) { %> <button type="button" class="thumbnail w-full h-20 sm:h-28 md:h-32 rounded-lg overflow-hidden border-2 border-transparent focus:outline-none" data-src="<%= img %>"> 
      <img src="<%= img %>" alt="thumb <%= idx+1 %>" class="w-full h-full object-cover"> </button> <% }) %> </div> </div>

    <!-- Right: Product Details -->
  <div class="relative bg-white rounded-2xl shadow-md p-6 sm:p-8 border border-gray-100 flex flex-col justify-between md:h-[550px] md:w-[85%] lg:w-[80%] mx-auto">

  <!-- Wishlist Icon -->
  <button 
    id="wishlistBtn"
    data-product="<%= product._id %>"
    class="absolute top-4 right-4 text-3xl transition transform hover:scale-110 z-10">
      <i id="heartIcon" 
        class="fa fa-heart <%= product.isInWishlist ? 'text-red-500' : 'text-gray-600' %>"></i>
  </button>

  <div class="flex flex-col justify-between h-full">
    <div>
      <!-- Product Name -->
      <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900 mb-3">
        <%= product.name %>
      </h1>

      <!-- Price Section -->
      <%
        const mainVariant = product.variants[0];
        const hasDiscount = mainVariant.discountPrice !== null && mainVariant.discountPrice < mainVariant.price;
        const finalPrice = hasDiscount ? mainVariant.discountPrice : mainVariant.price;
      %>

      <div id="priceSection" class="mb-4 flex items-center space-x-3">
        <% if (hasDiscount) { %>
          <span id="discountedPrice" class="text-2xl sm:text-3xl font-semibold text-red-600">
            â‚¹<%= finalPrice.toLocaleString() %>
          </span>
          <span id="originalPrice" class="text-gray-500 line-through text-lg">
            â‚¹<%= mainVariant.price.toLocaleString() %>
          </span>
          <span id="discountPercent" class="text-green-600 font-medium text-sm">
            (<%= Math.round(((mainVariant.price - finalPrice) / mainVariant.price) * 100) %>% OFF)
          </span>
        <% } else { %>
          <span id="finalPrice" class="text-2xl sm:text-3xl font-semibold text-gray-900">
            â‚¹<%= finalPrice.toLocaleString() %>
          </span>
        <% } %>
      </div>

      <!-- Description -->
      <p id="productDescription" class="text-gray-700 text-base sm:text-lg leading-relaxed mb-6 line-clamp-3">
        <%= product.description %>
      </p>

      <button id="toggleDescription" class="text-blue-600 font-semibold hover:underline">
        Read more
      </button>

      <!-- Variant Dropdown -->
      <% if (product.variants && product.variants.length > 1) { %>
        <div class="mt-4">
          <label for="variantSelect" class="block text-gray-700 font-medium mb-2">
            Choose Volume:
          </label>
          <select 
            id="variantSelect" 
            class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-black focus:outline-none">
            <% product.variants.forEach((variant, index) => { %>
              <option 
                value="<%= variant._id %>"
                data-price="<%= variant.price %>"
                data-discount="<%= variant.discountPrice ? variant.discountPrice : '' %>"
                data-stock="<%= variant.stock %>"
                <%= index === 0 ? 'selected' : '' %>>
                <%= variant.volume ? variant.volume + ' ml' : 'Default' %>
              </option>
            <% }) %>
          </select>
        </div>
      <% } %>

      <!-- Add to Cart / Out of Stock -->
      <div class="mt-8">
        <% if (mainVariant.stock > 0) { %>
          <button 
            id="addToCartBtn"
            data-product="<%= product._id %>"
            data-variant="<%= mainVariant._id %>"
            class="w-full inline-flex justify-center items-center gap-2 px-6 py-3 bg-black text-white text-lg rounded-xl shadow hover:shadow-lg transition">
            <i class="fa fa-shopping-cart"></i> Add To Cart
          </button>

          <button 
            id="outOfStockBtn"
            disabled
            class="hidden w-full px-6 py-3 bg-gray-300 text-gray-600 text-lg rounded-xl cursor-not-allowed">
            Out of Stock
          </button>
        <% } else { %>
          <button 
            id="addToCartBtn"
            data-product="<%= product._id %>"
            data-variant="<%= mainVariant._id %>"
            class="hidden w-full inline-flex justify-center items-center gap-2 px-6 py-3 bg-black text-white text-lg rounded-xl shadow hover:shadow-lg transition">
            <i class="fa fa-shopping-cart"></i> Add To Cart
          </button>

          <button 
            id="outOfStockBtn"
            disabled
            class="w-full px-6 py-3 bg-gray-300 text-gray-600 text-lg rounded-xl cursor-not-allowed">
            Out of Stock
          </button>
        <% } %>
      </div>
    </div>
  </div>
</div>

  </div>

  <!--   Related Products -->
<div class="mt-24 w-full">
  <h2 class="text-3xl font-bold text-center mb-10">You May Also Like</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
    <% if (relatedProducts && relatedProducts.length > 0) { %>
      <% relatedProducts.forEach(rp => { %>
        <div class="bg-white rounded-xl shadow-md hover:shadow-lg transition p-5 text-center relative">

          <!-- ðŸ”¹ Offer Badge -->
          <% if (rp.appliedOffer) { %>
            <div class="absolute top-3 left-3 bg-red-600 text-white text-xs font-semibold px-3 py-1 rounded-full shadow">
              <%= rp.appliedOffer.discountPercent %>% OFF
            </div>
          <% } %>

          <img src="<%= rp.variants[0]?.mainImage %>"
               alt="<%= rp.name %>"
               class="w-full h-56 object-cover rounded-lg mb-4 hover:scale-105 transition-transform duration-300">

          <h3 class="text-lg font-semibold mb-1"><%= rp.name %></h3>

         
          <!-- ðŸ”¹ Price Section -->
          <% const variant = rp.variants[0]; %>
          <% if (variant && variant.discountPercent > 0) { %>
            <p class="mb-3">
              <span class="line-through text-gray-500">â‚¹<%= variant.price.toLocaleString() %></span>
              <span class="text-red-600 font-bold ml-2">â‚¹<%= variant.discountPrice.toLocaleString() %></span>
            </p>
          <% } else { %>
            <p class="text-gray-700 font-medium mb-3">
              â‚¹<%= variant?.price?.toLocaleString() %>
            </p>
          <% } %>

          <a href="/productDetail/<%= rp._id %>"
             class="inline-block px-5 py-2 bg-orange-500 hover:bg-orange-600 text-white font-medium rounded-lg transition">
            View Details
          </a>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-center col-span-full text-gray-500">No related products found.</p>
    <% } %>
  </div>
</div>


 <div id="toast" 
     class="hidden fixed right-6 bottom-6 bg-black text-white px-6 py-3 rounded-lg shadow-lg 
     text-sm transition-all duration-500 opacity-0 z-50">
</div>

</section>


<!-- Footer -->
<%- include('../partials/footer') %>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const mainImage = document.getElementById("mainImage");
  const thumbnails = document.getElementById("thumbnails");

  thumbnails.addEventListener("click", function (e) {
    const btn = e.target.closest(".thumbnail");
    if (!btn) return;

    const newSrc = btn.dataset.src;
    const oldSrc = mainImage.src;

    // Smooth transition
    mainImage.classList.add("opacity-0");
    
    setTimeout(() => {
      // Swap images
      mainImage.src = newSrc;

      // Update clicked thumbnail â†’ previous main image
      btn.dataset.src = oldSrc;
      btn.querySelector("img").src = oldSrc;

      // Fade in effect
      mainImage.classList.remove("opacity-0");
    }, 200);
  });
});
</script>

<style>
#mainImage {
  transition: opacity 0.2s ease-in-out;
}
</style>




<script>
  window.allVariants = <%- JSON.stringify(product.variants) %>;
</script>

<script src="/javascript/user/product.js"> </script>
</body>   
</html>
