<%- include("../../views/partials/nav") %>

<main class="flex gap-6 px-6 py-10 max-w-7xl mx-auto">

  <!-- Sidebar Filter -->
  <aside class="w-64 bg-[#DFF0EE] p-6 rounded-md">
    
    <!-- Price Filter -->
    <div class="mb-8">
      <h3 class="text-sm font-bold mb-3 uppercase">Prices</h3>
      <input type="range" min="0" max="500" value="250" class="w-full accent-red-500" id="priceRange">
      <p class="text-xs text-gray-700 mt-2">Range: <span id="minPrice">$0</span> - <span id="maxPrice">$500</span></p>
    </div>

    <!-- Categories Filter -->
    <div class="mb-8">
      <h3 class="text-sm font-bold mb-3 uppercase">Categories</h3>
      <% const categories = ["Female", "Male", "Couple", "Kids"]; %>
      <% categories.forEach(cat => { %>
        <label class="flex items-center mb-2">
          <input type="checkbox" class="mr-2" name="category" value="<%= cat %>">
          <span class="text-sm"><%= cat %></span>
        </label>
      <% }) %>
    </div>

    <!-- Shop by Color -->
    <div>
      <h3 class="text-sm font-bold mb-3 uppercase">Shop by Color</h3>
      <% const colors = ["Gold", "Silver", "Black", "White"]; %>
      <% colors.forEach(color => { %>
        <label class="flex items-center mb-2">
          <input type="checkbox" class="mr-2" name="color" value="<%= color %>">
          <span class="text-sm"><%= color %></span>
        </label>
      <% }) %>
    </div>

  </aside>

  <!-- Product Grid -->
  <section class="flex-1">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      <% products.forEach(product => { %>
        <div class="border rounded-md overflow-hidden relative group bg-white">
          <!-- Wishlist Icon -->
          <button class="absolute top-2 right-2 p-1 rounded-full bg-white shadow hover:bg-red-500 hover:text-white transition">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 group-hover:text-white" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 
              5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 
              2.09C13.09 3.81 14.76 3 16.5 3 19.58 
              3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 
              11.54L12 21.35z"/>
            </svg>
          </button>

          <!-- Product Image -->
          <img src="/images/<%= product.image %>" alt="<%= product.title %>" class="w-full h-64 object-cover">

          <!-- Product Info -->
          <div class="p-3">
            <h4 class="text-sm font-semibold mb-1"><%= product.title %></h4>
            <p class="text-xs text-gray-500 mb-2 truncate"><%= product.category %></p>
            <p class="text-sm font-bold">$<%= product.price.toFixed(2) %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

</main>

<script>
  // Example for price range live update
  const range = document.getElementById("priceRange");
  const minPrice = document.getElementById("minPrice");
  const maxPrice = document.getElementById("maxPrice");
  
  range.addEventListener("input", (e) => {
    minPrice.innerText = "$0";
    maxPrice.innerText = `$${e.target.value}`;
  });
</script>

