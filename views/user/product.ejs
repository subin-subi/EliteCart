<%- include("../../views/partials/nav") %>

<div class="flex flex-col lg:flex-row min-h-screen bg-gray-50">
  
  <!-- Left Sidebar - Filters -->
  <aside class="w-full lg:w-64 bg-teal-100 p-6 space-y-8">
    
    <!-- Filter Form -->
    <form action="/product" method="GET" id="filterForm" class="space-y-6">
      
      <!-- Category Filter -->
      <div class="space-y-4">
        <h3 class="text-lg font-bold text-gray-800 uppercase tracking-wide">Categories</h3>
        <div class="space-y-3">
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="category" value="all" 
                   <%= !filters.category || filters.category === 'all' ? 'checked' : '' %>
                   class="w-4 h-4 text-teal-600 border-gray-300 focus:ring-teal-500">
            <span class="text-gray-700">All Categories</span>
          </label>
          <% if (categories && categories.length > 0) { %>
            <% categories.forEach(cat => { %>
              <label class="flex items-center space-x-3 cursor-pointer">
                <input type="radio" name="category" value="<%= cat._id %>" 
                       <%= filters.category === cat._id.toString() ? 'checked' : '' %>
                       class="w-4 h-4 text-teal-600 border-gray-300 focus:ring-teal-500">
                <span class="text-gray-700"><%= cat.name %></span>
              </label>
            <% }) %>
          <% } else { %>
            <p class="text-sm text-gray-500 italic">No categories available</p>
          <% } %>
        </div>
      </div>

      <!-- Price Range Filter -->
      <div class="space-y-4">
        <h3 class="text-lg font-bold text-gray-800 uppercase tracking-wide">Price Range</h3>
        <div class="space-y-3">
          <div class="grid grid-cols-2 gap-2">
            <div>
              <label class="block text-sm text-gray-700 mb-1">Min Price</label>
              <input type="number" name="minPrice" 
                     value="<%= filters.minPrice || '' %>"
                     placeholder="0" min="0"
                     class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500">
            </div>
            <div>
              <label class="block text-sm text-gray-700 mb-1">Max Price</label>
              <input type="number" name="maxPrice" 
                     value="<%= filters.maxPrice || '' %>"
                     placeholder="1000" min="0"
                     class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-500">
            </div>
          </div>
        </div>
      </div>

      <!-- Stock Filter -->
      <div class="space-y-4">
        <h3 class="text-lg font-bold text-gray-800 uppercase tracking-wide">Availability</h3>
        <div class="space-y-3">
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="stock" value="all" 
                   <%= !filters.stock || filters.stock === 'all' ? 'checked' : '' %>
                   class="w-4 h-4 text-teal-600 border-gray-300 focus:ring-teal-500">
            <span class="text-gray-700">All</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="stock" value="inStock" 
                   <%= filters.stock === 'inStock' ? 'checked' : '' %>
                   class="w-4 h-4 text-teal-600 border-gray-300 focus:ring-teal-500">
            <span class="text-gray-700">In Stock</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="stock" value="outOfStock" 
                   <%= filters.stock === 'outOfStock' ? 'checked' : '' %>
                   class="w-4 h-4 text-teal-600 border-gray-300 focus:ring-teal-500">
            <span class="text-gray-700">Out of Stock</span>
          </label>
        </div>
      </div>

      <!-- Filter Buttons -->
      <div class="space-y-3">
        <button type="submit" 
                class="w-full bg-teal-600 text-white py-2 px-4 rounded-md hover:bg-teal-700 transition-colors duration-200">
          Apply Filters
        </button>
        <button type="button" onclick="clearFilters()" 
                class="w-full bg-gray-500 text-white py-2 px-4 rounded-md hover:bg-gray-600 transition-colors duration-200">
          Clear Filters
        </button>
      </div>
    </form>
  </aside>

  <!-- Main Content Area -->
  <main class="flex-1 p-6 bg-white">
    
    <!-- Results Header -->
    <div class="mb-6">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Products</h1>
      <p class="text-gray-600">
        Showing <%= products.length %> product<%= products.length !== 1 ? 's' : '' %>
        <% if (filters.category && filters.category !== 'all') { %>
          in selected category
        <% } %>
      </p>
    </div>

    <!-- Product Grid -->
    <% if (products && products.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        
        <% products.forEach(product => { %>
          <% if (product.variants && product.variants.length > 0) { %>
            <% const variant = product.variants[0]; %>
            <div class="bg-white rounded-lg shadow-md overflow-hidden group hover:shadow-lg transition-shadow duration-300">
              <div class="relative">
                <% if (variant.mainImage) { %>
                  <img src="/uploads/products/<%= variant.mainImage %>" 
                       alt="<%= product.name %>" 
                       class="w-full h-64 object-cover">
                <% } else { %>
                  <div class="w-full h-64 bg-gray-200 flex items-center justify-center">
                    <span class="text-gray-500">No Image</span>
                  </div>
                <% } %>
                
                <!-- Wishlist Icon -->
                <button class="absolute top-3 right-3 p-2 rounded-full bg-white shadow-md hover:bg-red-500 hover:text-white transition-colors duration-200">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-500 group-hover:text-white" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                  </svg>
                </button>

                <!-- Stock Badge -->
                <% if (variant.stock <= 0) { %>
                  <div class="absolute top-3 left-3 bg-red-500 text-white px-2 py-1 rounded-md text-xs font-semibold">
                    Out of Stock
                  </div>
                <% } else if (variant.stock < 10) { %>
                  <div class="absolute top-3 left-3 bg-yellow-500 text-white px-2 py-1 rounded-md text-xs font-semibold">
                    Low Stock
                  </div>
                <% } %>
              </div>
              
              <div class="p-4">
                <h3 class="text-lg font-semibold text-gray-800 mb-2"><%= product.name %></h3>
                <% if (product.category) { %>
                  <p class="text-sm text-teal-600 mb-2"><%= product.category.name %></p>
                <% } %>
                <p class="text-sm text-gray-600 mb-3 line-clamp-2"><%= product.description %></p>
                
                <div class="flex items-center justify-between">
                  <div>
                    <% if (variant.discountPrice) { %>
                      <p class="text-lg font-bold text-gray-900">$<%= variant.discountPrice.toFixed(2) %></p>
                      <p class="text-sm text-gray-500 line-through">$<%= variant.price.toFixed(2) %></p>
                    <% } else { %>
                      <p class="text-lg font-bold text-gray-900">$<%= variant.price.toFixed(2) %></p>
                    <% } %>
                  </div>
                  
                  <div class="text-right">
                    <p class="text-xs text-gray-600">Stock: <%= variant.stock %></p>
                    <p class="text-xs text-gray-600">Color: <%= variant.color %></p>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        <% }) %>
        
      </div>
    <% } else { %>
      <!-- No Products Found -->
      <div class="text-center py-12">
        <div class="text-gray-400 mb-4">
          <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No products found</h3>
        <p class="text-gray-500 mb-6">Try adjusting your filters or check back later.</p>
        <button onclick="clearFilters()" 
                class="bg-teal-600 text-white px-4 py-2 rounded-md hover:bg-teal-700 transition-colors duration-200">
          Clear All Filters
        </button>
      </div>
    <% } %>
  </main>
</div>

<style>
  /* Line clamp utility for product descriptions */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  /* Custom focus styles */
  input:focus, button:focus {
    outline: none;
    ring: 2px;
    ring-color: #14b8a6;
  }
</style>

<script>
  // Clear filters function
  function clearFilters() {
    window.location.href = '/product';
  }

  // Auto-submit form when radio buttons change
  document.querySelectorAll('input[type="radio"]').forEach(radio => {
    radio.addEventListener('change', function() {
      document.getElementById('filterForm').submit();
    });
  });

  // Heart icon hover effects
  document.querySelectorAll('.group').forEach(card => {
    const heart = card.querySelector('svg');
    const button = card.querySelector('button');
    
    if (heart && button) {
      button.addEventListener('mouseenter', () => {
        heart.style.color = '#ffffff';
      });
      
      button.addEventListener('mouseleave', () => {
        heart.style.color = '#6b7280';
      });
    }
  });

  // Price range validation
  document.querySelectorAll('input[type="number"]').forEach(input => {
    input.addEventListener('blur', function() {
      const minPrice = document.querySelector('input[name="minPrice"]').value;
      const maxPrice = document.querySelector('input[name="maxPrice"]').value;
      
      if (minPrice && maxPrice && parseFloat(minPrice) > parseFloat(maxPrice)) {
        alert('Minimum price cannot be greater than maximum price');
        this.value = '';
      }
    });
  });
</script>

