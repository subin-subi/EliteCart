<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contact || EliteCart</title>

    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />
  </head>

  <body
    class="min-h-screen bg-gradient-to-br from-green-100 via-white to-green-200"
  >
    <!-- Navbar -->
    <%- include("../partials/nav") %>

    <!-- Header -->
    <section class="pt-24 pb-10 text-center">
      <h1
        class="text-4xl md:text-5xl font-extrabold text-gray-800 tracking-tight"
      >
        Get in Touch
      </h1>
      <p class="text-gray-600 max-w-2xl mx-auto mt-3">
        Have questions or need support? Our team is here to assist you anytime.
      </p>
    </section>

    <!-- Contact Layout -->
    <div class="px-6 pb-20 md:px-20">
      <div
        class="max-w-2xl mx-auto bg-white p-10 rounded-2xl shadow-xl border border-gray-100"
      >
        <h3 class="text-2xl font-semibold text-gray-800 mb-6">
          Send a Message
        </h3>

        <form id="contactForm">
          <!-- Full Name -->
          <div class="mb-5">
            <label class="block font-medium mb-2 text-gray-700"
              >Full Name</label
            >
            <input
              id="fullName"
              type="text"
              class="w-full border border-gray-300 px-4 py-3 rounded-xl focus:ring-2 focus:ring-green-500 outline-none"
              placeholder="Name"
            />
          </div>

          <!-- Email -->
          <div class="mb-5">
            <label class="block font-medium mb-2 text-gray-700">Email</label>
            <input
              id="email"
              type="email"
              class="w-full border border-gray-300 px-4 py-3 rounded-xl focus:ring-2 focus:ring-green-500 outline-none"
              placeholder="your@gmail.com"
            />
          </div>

          <!-- Message -->
          <div class="mb-6">
            <label class="block font-medium mb-2 text-gray-700">Message</label>
            <textarea
              id="message"
              rows="5"
              class="w-full border border-gray-300 px-4 py-3 rounded-xl focus:ring-2 focus:ring-green-500 outline-none"
              placeholder="Write your message..."
            ></textarea>
          </div>

          <!-- Submit Button -->
          <button
            class="w-full bg-green-600 hover:bg-green-700 transition text-white font-semibold py-3 rounded-xl text-lg"
          >
            Send Message
          </button>
        </form>
      </div>
    </div>

    <!-- Footer -->
    <%- include("../partials/footer") %>

    <!-- SweetAlert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const form = document.querySelector("#contactForm");
        const nameInput = document.querySelector("#fullName");
        const emailInput = document.querySelector("#email");
        const msgInput = document.querySelector("#message");

        form.addEventListener("submit", function (e) {
          e.preventDefault();

          const name = nameInput.value.trim();
          const email = emailInput.value.trim();
          const message = msgInput.value.trim();

          // Basic Validation
          if (!name) {
            return Swal.fire({
              icon: "warning",
              title: "Name is required",
              toast: true,
              position: "top-end",
              timer: 2000,
              showConfirmButton: false,
            });
          }

          const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (!email || !emailPattern.test(email)) {
            return Swal.fire({
              icon: "warning",
              title: "Enter a valid email",
              toast: true,
              position: "top-end",
              timer: 2000,
              showConfirmButton: false,
            });
          }

          if (!message) {
            return Swal.fire({
              icon: "warning",
              title: "Message cannot be empty",
              toast: true,
              position: "top-end",
              timer: 2000,
              showConfirmButton: false,
            });
          }

          // Success Toast
          Swal.fire({
            icon: "success",
            title: "Message sent successfully!",
            text: "Thank you for reaching out. Our support team will get back to you soon.",
            confirmButtonColor: "#16a34a",
          });

          // Clear Fields
          nameInput.value = "";
          emailInput.value = "";
          msgInput.value = "";
        });
      });
    </script>
  </body>
</html>
