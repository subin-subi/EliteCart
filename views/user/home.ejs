<script>
  // ================== Carousel Script ==================
  let index = 0;
  const carousel = document.getElementById("carousel");
  const totalSlides = 4;
  const slidesToShow = 2;

  function slide(direction) {
    index += direction;
    if (index < 0) index = 0;
    if (index > totalSlides - slidesToShow) index = totalSlides - slidesToShow;
    carousel.style.transform = `translateX(-${index * 50}%)`;
  }

  // ================== Banner Script ==================
  const banner = document.getElementById("banner");
  const bannerImages = [
    "/images/ban1.jpg",
    "/images/ban2.jpeg",
    "/images/ban3.jpg"
  ];
  
  let bannerIndex = 0;

  setInterval(() => {
    bannerIndex = (bannerIndex + 1) % bannerImages.length;
    banner.style.backgroundImage = `url('${bannerImages[bannerIndex]}')`;
  }, 5000); // 5 seconds
</script>
