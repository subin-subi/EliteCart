<%- include("../../views/partials/nav") %>

<main class="w-full">

<!-- Hero Section -->
<section class="flex flex-col md:flex-row items-center justify-center px-8 pt-12 pb-12 bg-white">
  <!-- Left Text -->
  <div class="md:w-1/2 flex items-center justify-center md:justify-end pr-8">
    <p class="text-3xl md:text-4xl font-semibold leading-snug text-gray-900 m-0 text-center md:text-left">
      "Wear the mystery.<br>Reveal the magic."
    </p>
  </div>
  <!-- Right Image -->
  <div class="md:w-1/2 flex items-center justify-center md:justify-start pl-8 mt-8 md:mt-0">
    <img src="/images/img.webp" alt="Hero Mask" 
         class="w-64 md:w-72 h-auto rounded-3xl shadow-lg">
  </div>
</section>

<!-- Most Highlights -->
<section class="py-10 bg-gray-50">
  <h2 class="text-center text-2xl md:text-3xl font-bold mb-8 tracking-widest text-gray-900">
    MOST HIGHLIGHTS
  </h2>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 px-6 max-w-6xl mx-auto">
    
    <!-- Left Large Image -->
    <div class="relative overflow-hidden rounded-lg">
      <img src="/images/two.webp" alt="Exclusive Mask" class="w-full h-80 object-cover">
      <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-40">
        <span class="text-white text-2xl font-semibold text-center">
          Exquisite Styles &<br>Collect
        </span>
      </div>
    </div>

    <!-- Right Grid -->
    <div class="grid grid-cols-2 gap-4">
      <div class="relative overflow-hidden rounded-lg">
        <img src="/images/three.webp" alt="Exquisite Styles & Collections" class="w-full h-36 object-cover">
        <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-40">
          <span class="text-white text-lg font-semibold text-center px-2">
            Exquisite Styles & <br> Collections
          </span>
        </div>
      </div>
      <div class="relative overflow-hidden rounded-lg">
        <img src="/images/one.webp" alt="New Arrivals" class="w-full h-36 object-cover">
        <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-40">
          <span class="text-white text-lg font-semibold text-center">
            New Arrivals
          </span>
        </div>
      </div>
      <div class="relative overflow-hidden rounded-lg col-span-2">
        <img src="/images/ban.jpg" alt="Exclusive Items" class="w-full h-44 object-cover">
        <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-40">
          <span class="text-white text-lg font-semibold text-center">
            Exclusive Items
          </span>
        </div>
      </div>
    </div>

  </div>
</section>

<!-- Popular Section -->
<section class="py-10 bg-white">
  <h2 class="text-center text-2xl md:text-3xl font-bold mb-8 tracking-widest text-gray-900">
    POPULAR AT ALL TIME
  </h2>
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 px-6 max-w-6xl mx-auto">
    <% const popular = [
      { img: "imag.webp", title: "Venetian Mask" },
      { img: "one.webp", title: "Feather Mask" },
      { img: "five.webp", title: "Gold Mask" },
      { img: "four.jpg", title: "Butterfly Mask" }
    ]; %>
    <% popular.forEach(item => { %>
      <div class="text-center">
        <div class="w-full h-48 rounded-lg overflow-hidden mb-3">
          <img src="/images/<%= item.img %>" alt="<%= item.title %>" class="w-full h-full object-cover">
        </div>
        <p class="text-sm text-gray-700 font-medium"><%= item.title %></p>
      </div>
    <% }) %>
  </div>
</section>

<!-- Why Shop Section -->
<section class="py-16 px-6 max-w-6xl mx-auto bg-gray-50">
  <div class="text-center mb-12">
    <h2 class="text-2xl font-bold text-gray-900 mb-4">Why you'll love to shop on our website</h2>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-12 text-center">
    <div class="flex flex-col items-center">
      <div class="w-16 h-16 bg-black rounded-full flex items-center justify-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
        </svg>
      </div>
      <h3 class="font-bold text-lg mb-2">Easy Returns</h3>
      <p class="text-sm text-gray-600">Hassle-free returns and exchanges</p>
    </div>
    
    <div class="flex flex-col items-center">
      <div class="w-16 h-16 bg-black rounded-full flex items-center justify-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
      </div>
      <h3 class="font-bold text-lg mb-2">Customer Support</h3>
      <p class="text-sm text-gray-600">24/7 support for all your queries</p>
    </div>
    
    <div class="flex flex-col items-center">
      <div class="w-16 h-16 bg-black rounded-full flex items-center justify-center mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
        </svg>
      </div>
      <h3 class="font-bold text-lg mb-2">Contact Us</h3>
      <p class="text-sm text-gray-600">Get in touch anytime</p>
    </div>
  </div>
</section>

</main>

<%- include("../../views/partials/footer") %>
