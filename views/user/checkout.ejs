<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</head>

<body class="bg-gray-100 pt-16 sm:pt-20">
      <%- include("../partials/nav") %>
    <main class="max-w-7xl mx-auto px-4 py-10 grid grid-cols-1 lg:grid-cols-3 gap-8">

  <!-- Left Section -->
  <section class="lg:col-span-2 space-y-8">



    
<!-- Shipping Address -->
<div>
  <h2 class="text-lg font-semibold mb-4">Shipping Address</h2>

  <% if (defaultAddress) { %>
    <div class="bg-[#e6f2ef] rounded-lg p-4 flex justify-between items-start w-[50%]">
      <div class="text-sm leading-6 text-gray-700">
        <p class="font-semibold"><%= defaultAddress.name %></p>
        <p><%= defaultAddress.houseName %>, <%= defaultAddress.street %></p>
        <p><%= defaultAddress.city %>, <%= defaultAddress.state %>, <%= defaultAddress.country %></p>
        <p>PIN: <%= defaultAddress.pincode %></p>
        <p>Contact number: <%= defaultAddress.mobile %></p>
      </div>

      <!-- Edit button -->
      
 <button 
  type="button" 
  onclick='editAddress(<%- JSON.stringify(defaultAddress) %>)' 
  class="bg-black text-white text-xs px-4 py-1 rounded-full hover:bg-gray-800 transition"
>
  Edit
</button>



    </div>
  <% } else { %>
    <div class="bg-red-100 text-red-600 rounded-lg p-4 w-[50%]">
      No default address found. Please add one.
    </div>
  <% } %>

  <!-- Add Address Button -->
   <div class="mt-4">
  <button 
    onclick="openAddressModal()" 
    class="bg-green-600 text-white text-sm px-5 py-2 rounded-full hover:bg-green-700 transition"
  >
    + Add New Address
  </button>
</div>

</div>



    <!-- Checkout Payment Options -->
    <div class="mt-10">
  <h2 class="text-xl font-semibold mb-4">Checkout</h2>
  <form id="payment-form" class="space-y-3 flex flex-col items-center">
    
    <label class="flex items-center justify-between bg-gray-200 rounded-full px-5 py-2 cursor-pointer w-1/2">
      <div class="flex items-center gap-3">
        <input type="radio" name="payment" value="UPI" class="w-4 h-4">
        <span>UPI</span>
      </div>
    </label>

    <label class="flex items-center justify-between bg-gray-200 rounded-full px-5 py-2 cursor-pointer w-1/2">
      <div class="flex items-center gap-3">
        <input type="radio" name="payment" value="Wallet" class="w-4 h-4">
        <span>Wallet</span>
      </div>
    </label>

    <label class="flex items-center justify-between bg-gray-200 rounded-full px-5 py-2 cursor-pointer w-1/2">
      <div class="flex items-center gap-3">
        <input type="radio" name="payment" value="COD" checked class="w-4 h-4">
        <span>Cash On Delivery</span>
      </div>
    </label>

    <div class="flex justify-center mt-6">
      <button type="submit" class="bg-[#e6f2ef] text-black font-medium px-8 py-2 rounded-full hover:bg-[#d5e9e5]">Pay Now</button>
    </div>
  </form>
</div>

  </section>

  <!-- Right Section: Order Summary -->
  <aside class="border border-gray-200 rounded-lg p-5 h-fit">
    <h3 class="font-semibold text-sm mb-4">Your Order <span class="text-gray-500 text-xs">( <%= cart.items.length %> )</span></h3>

    <div class="space-y-4">
      <% cart.items.forEach(item => { %>
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-4">
          <img src="<%= item.image %>" alt="<%= item.name %>" class="w-14 h-14 object-cover rounded-md">
          <div>
            <p class="text-sm font-medium"><%= item.name %></p>
            <p class="text-xs text-gray-500">Color: <%= item.color %></p>
            <p class="text-xs text-gray-400">(x<%= item.quantity %>)</p>
          </div>
        </div>
        <p class="text-sm font-medium">$<%= item.price %></p>
      </div>
      <% }) %>
    </div>

    <div class="border-t border-gray-200 mt-6 pt-4 text-sm space-y-2">
      <div class="flex justify-between">
        <span>Subtotal</span>
        <span>$<%= cart.subtotal %></span>
      </div>
      <div class="flex justify-between">
        <span>Shipping</span>
        <span>Calculated at next step</span>
      </div>
      <div class="flex justify-between font-semibold mt-2">
        <span>Total</span>
        <span>$<%= cart.total %></span>
      </div>
    </div>
  </aside>

</main>
 <div class="pt-6"><%- include("../partials/footer") %></div>


 <!-- Address Form Modal -->
  <%- include('../partials/addressForm') %>



<script>
  // Close modals
  
    function openAddressModal() {
      document.getElementById('addAddressModal').classList.remove('hidden');
    }

</script>


</body>
</html>