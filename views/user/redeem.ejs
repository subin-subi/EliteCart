<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Change Password | Elite Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.3/dist/tailwind.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Navbar -->
  <%- include("../partials/nav") %>

  <div class="flex flex-1 mt-20 px-4 md:px-10 gap-6">

    <!-- Sidebar -->
    <div class="hidden md:block">
      <%- include("../partials/userSidebar") %>
    </div>

<div class="flex-1 max-w-md mx-auto mt-10 bg-white border rounded-lg shadow-md pt-16 pb-16 px-6 mb-16">
  <!-- Redeem Code Display Box -->
  <div class="bg-green-50 border border-green-300 rounded-lg p-6 shadow-sm text-center">
  <h2 class="text-2xl font-semibold text-gray-800 mb-4">Your Redeem Code</h2>

  <div
    id="redeemCodeBox"
    class="text-xl font-mono font-bold text-green-700 bg-green-100 inline-block px-6 py-3 rounded-lg shadow-inner"
  >
    <%= user.redeemCode || "No Code Available" %>
  </div>

  <% if (user.redeemCode) { %>
    <button
      id="copyRedeemBtn"
      class="mt-4 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition"
    >
      Copy Code
    </button>
  <% } %>

  <p id="copyMsg" class="text-green-700 text-sm mt-2 hidden">Copied!</p>
</div>


  <!-- Rules / Instructions -->
  <div class="mt-6 text-gray-600">
    <h3 class="font-semibold text-gray-800 mb-2">Rules & Instructions:</h3>
    <ul class="list-disc list-inside space-y-1 text-sm">
      <li>Each code can be used only once per account.</li>
      <li>Redeem codes must be valid and not expired.</li>
      <li>Codes cannot be combined with other offers.</li>
      <li>Rewards will be applied automatically upon successful redemption.</li>
      <li>Contact support for any issues regarding your code.</li>
    </ul>
  </div>
</div>

  </div>

  <!-- Footer -->
  <%- include('../partials/footer') %>

  <!-- Axios Script -->
<script>
 document.addEventListener("DOMContentLoaded", () => {
  const copyBtn = document.getElementById("copyRedeemBtn");
  const redeemCodeBox = document.getElementById("redeemCodeBox");
  const copyMsg = document.getElementById("copyMsg");

  if (copyBtn) {
    copyBtn.addEventListener("click", async () => {
      const code = redeemCodeBox.textContent.trim();
      try {
        await navigator.clipboard.writeText(code);
        copyMsg.classList.remove("hidden");
        copyMsg.textContent = "Copied!";
        setTimeout(() => copyMsg.classList.add("hidden"), 2000);
      } catch (err) {
        console.error("Copy failed:", err);
        copyMsg.textContent = "Failed to copy!";
        copyMsg.classList.remove("hidden");
        setTimeout(() => copyMsg.classList.add("hidden"), 2000);
      }
    });
  }
});

</script>

</body>
</html>
