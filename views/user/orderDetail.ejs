<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">
 <!-- Navbar -->
  <%- include("../partials/nav") %>

  <!-- Sidebar -->
    <div class="hidden md:block">
      <%- include("../partials/userSidebar") %>
    </div>

<!-- My Orders Section -->
<div class="container mx-auto px-4 py-10 flex flex-col md:flex-row gap-6">

  <!-- Sidebar -->
  <%- include('../partials/sidebar') %>

  <!-- Orders Section -->
  <div class="flex-1 border rounded-lg bg-gray-50 shadow-sm">
    <div class="flex items-center justify-between border-b px-4 py-3 bg-gray-100 rounded-t-lg">
      <h2 class="text-lg font-semibold">My Orders</h2>
      <select class="border rounded-md px-2 py-1 text-sm bg-white">
        <option>Last 6 months</option>
        <option>Last 1 year</option>
        <option>All Orders</option>
      </select>
    </div>

    <div class="overflow-x-auto">
      <table class="w-full text-sm">
        <thead class="border-b bg-gray-200 text-gray-700">
          <tr>
            <th class="py-2 px-4 text-left">Order ID</th>
            <th class="py-2 px-4 text-center">Items</th>
            <th class="py-2 px-4 text-center">Total Amount</th>
            <th class="py-2 px-4 text-left">Order Status</th>
          </tr>
        </thead>

        <tbody>
          <% if (orders && orders.length > 0) { %>
            <% orders.forEach(order => { %>
              <tr class="border-b hover:bg-gray-100 transition">
                <td class="py-3 px-4 font-semibold text-gray-800">#<%= order.orderId %></td>
                <td class="py-3 px-4 text-center"><%= order.items.length %></td>
                <td class="py-3 px-4 text-center">â‚¹ <%= order.totalAmount %></td>
                <td class="py-3 px-4">
                  <% if (order.status === "Placed") { %>
                    <div class="flex items-center gap-2">
                      <span class="h-2 w-2 bg-green-500 rounded-full"></span>
                      <div>
                        <p class="text-green-600 font-medium">Delivery expected by <%= order.deliveryDate %></p>
                        <p class="text-gray-600 text-sm">Your order has been placed.</p>
                      </div>
                    </div>
                  <% } else if (order.status === "Cancelled") { %>
                    <div class="flex items-center gap-2">
                      <span class="h-2 w-2 bg-red-500 rounded-full"></span>
                      <div>
                        <p class="text-red-600 font-medium">Cancelled on <%= order.cancelDate %></p>
                        <p class="text-gray-600 text-sm">Your order has been cancelled.</p>
                      </div>
                    </div>
                  <% } %>
                  <button 
                    onclick="window.location.href='/order/<%= order._id %>'"
                    class="mt-2 bg-black text-white text-xs px-3 py-1 rounded hover:bg-gray-800">
                    View Orders
                  </button>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center py-10 text-gray-500">
                No orders found.
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>




     <!-- Footer -->
  <%- include('../partials/footer') %>

</body>
</html>